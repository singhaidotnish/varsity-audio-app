# ========== SERVER ==========
PORT=5010
NODE_ENV=development

# ========== ADMIN ==========
ADMIN_TOKEN=your-secure-admin-token-here-change-this
JWT_SECRET=another-secret-key-for-production

# ========== CLOUDINARY ==========
CLOUDINARY_FOLDER=varsity-audio
CLOUDINARY_CLOUD_NAME=name
CLOUDINARY_API_KEY=key
CLOUDINARY_API_SECRET=secret
CLOUDINARY_URL=cloudinary://CLOUDINARY_API_KEY:CLOUDINARY_API_SECRET@CLOUDINARY_CLOUD_NAME
# ========== GOOGLE TTS (Optional) ==========
GOOGLE_APPLICATION_CREDENTIALS=./google-credentials.json
# OR add credentials directly:
GOOGLE_TTS_API_KEY=key

# ========== CORS ==========
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ========== RATE LIMITING ==========
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100